extends layouts/main.pug

block content
  .page.page_index.page_active(data-page-id="index")
    a.floating-list-btn(href="#")
    
    section.slider.swiper-container

      ul.slider-list.swiper-wrapper
        li.slider-slide.swiper-slide
        li.slider-slide.swiper-slide

      a.slider-arrow.slider-arrow_right(href="#")
      a.slider-arrow.slider-arrow_left(href="#")

    h3.subtitle To provide the best quality commercial lighting products <br> using the latest technology from a company that values <br> the environment, its brand name and products and most <br> importantly, values you, the customer.

    section.pane.pane-products
      a.pane-block.pane-block_dark.pane-block_empty.product-link(style="width: 38%" href="product.html")
      .pane-block.pane-block_white.pane-block-link.product-link(style="width: 26%" href="product.html")
        h5.pane-block-title 
          span FEATURED <br>PRODUCTS
        a.pane-bottom-link(href="#") SEE ALL PRODUCTS >
      a.pane-block.pane-block_light.pane-block_empty.product-link(style="width: 18%" href="product.html")
      a.pane-block.pane-block_dark.pane-block_empty.product-link(style="width: 18%" href="product.html")

    h5.section-title Inspirational Applications
    section.pane.pane-applications
      .pane-block.pane-block_dark.pane-block_empty.pane-block_has-footer(style="width: 33%")
        span.pane-block-footer-text KITCHEN
      .pane-block.pane-block_light.pane-block_empty.pane-block_has-footer(style="width: 33%")
        span.pane-block-footer-text BATHROOM
      .pane-block.pane-block_dark.pane-block_empty.pane-block_has-footer(style="width: 33%")
        span.pane-block-footer-text LIVINGROOM &amp; BEDROOM
    a.section-footer-link SEE ALL PRODUCTS

    h5.section-title Latest News from UniLamp
    section.news
      .news-block
        span.news-block-title Produkter som kan overdekkles av isolasjonsmatter
      nav.news-list
        .news-list-block
          .news-list-text 
            span Ny slitesterk <br> overflatebehandling <br> fra Unilamp
          .news-list-img.news-list-img_darker
        
        .news-list-block
          .news-list-img.news-list-img_lighter
          .news-list-text 
            span Noen sover bedre <br> med 7-års <br> syzztemgaranti
        
        .news-list-block
          .news-list-text 
            span Eco LED: Altmulig-<br> lampen <br> med alle-<br>-mulige-fordeler
          .news-list-img.news-list-img_darker
        
        .news-list-block
          .news-list-img.news-list-img_lighter
          .news-list-text 
            span WarmDim blir <br> den nye lystrenden
    
    section.catalog
      .catalog-img
      .catalog-meta
        div
          h5.catalog-title Catalog 2017
          .catalog-text 
            | Unilamp Norden AS har i løpet av kort tid etablert seg og tatt en
            br
            | plass i det profesjonelle elektro - og belysningsmarkedet. Med
            br
            | moderne teknologi ognye tekniske løsninger vinner selskapet
            br
            | stadig flere tilhengere.
          a.catalog-link(href="#") SEE IT ONLINE

  .page.page_product(data-page-id="product")
    section.product-details
      .swiper-container.products-slider
        ul.swiper-wrapper.products-slider-list
          li.swiper-slide
            include includes/product
          li.swiper-slide
            include includes/product

      a.product-arrow.product-arrow_right(href="#")
      a.product-arrow.product-arrow_left(href="#")
    